{
  "name": "secure-community-website",
  "version": "1.0.0",
  "description": "보안이 강화된 커뮤니티 웹사이트",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install",
    "dev:full": "concurrently \"npm run dev\" \"npm run client\"",
    "setup": "npm run install-all && echo '설치가 완료되었습니다. .env 파일을 설정하고 npm run dev:full을 실행하세요.'"
  },
  "dependencies": {
    "express": "^4.18.2",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.4",
    "express-session": "^1.17.3",
    "connect-mongo": "^5.0.0",
    "compression": "^1.7.4",
    "express-mongo-sanitize": "^2.2.0",
    "xss-clean": "^0.1.1",
    "hpp": "^0.2.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0"
  },
  "keywords": ["community", "security", "website", "nodejs", "react", "mongodb"],
  "author": "Your Name",
  "license": "MIT"
} 